#!/usr/bin/env sh

# bar settings
SPACEBAR_HEIGHT=$(spacebar -m config height)
yabai -m config external_bar all:$SPACEBAR_HEIGHT:0

# float 2nd monitor
yabai -m config --space 6 layout float
yabai -m config --space 7 layout float

# global settings
yabai -m config mouse_follows_focus        on
yabai -m config focus_follows_mouse        autoraise
yabai -m config window_placement           second_child
yabai -m config window_topmost             on
yabai -m config window_shadow              off
yabai -m config window_opacity             off
yabai -m config window_opacity_duration    0.0
yabai -m config active_window_opacity      1.0
yabai -m config normal_window_opacity      0.85
yabai -m config window_border              on
yabai -m config window_border_width        6
yabai -m config active_window_border_color 0xFFdfb899
yabai -m config normal_window_border_color 0xFF505050
yabai -m config insert_feedback_color      0xFFD75F5F
yabai -m config split_ratio                0.50
yabai -m config auto_balance               on
yabai -m config mouse_modifier             fn
yabai -m config mouse_action1              move
yabai -m config mouse_action2              resize

# general space settings
yabai -m config layout                     bsp
yabai -m config top_padding                20
yabai -m config bottom_padding             20
yabai -m config left_padding               20
yabai -m config right_padding              20
yabai -m config window_gap                 10

# mission-control desktop labels
yabai -m space 1 --label web
yabai -m space 2 --label daily
yabai -m space 3 --label notes
yabai -m space 4 --label code1
yabai -m space 5 --label code2
yabai -m space 6 --label yt
yabai -m space 7 --label zoom

# specific space settings
yabai -m config --space daily layout       stack

# float system preferences. Most of these just disable Yabai form resizing them.
yabai -m rule --add app="^App Store$" sticky=on layer=above manage=off
yabai -m rule --add app="^Finder$" sticky=on layer=above manage=off
yabai -m rule --add app="^Karabiner-Elements$" sticky=on layer=above manage=off
yabai -m rule --add app="^Karabiner-EventViewer$" sticky=on layer=above manage=off
yabai -m rule --add app="^Disk Utility$" sticky=on layer=above manage=off
yabai -m rule --add app="^System Information$" sticky=on layer=above manage=off
yabai -m rule --add app="^Activity Monitor$" sticky=on layer=above manage=off
yabai -m rule --add app="^Path Finder$" manage=off
yabai -m rule --add app="^System Preferences$" sticky=on layer=above manage=off
yabai -m rule --add app="^Alfred Preferences$" sticky=on layer=above manage=off
yabai -m rule --add app="Archive Utility$" sticky=on layer=above manage=off
yabai -m rule --add app=Spotify manage=off --space 6
yabai -m rule --add app=Discord manage=off --space 6
yabai -m rule --add app=Ãœbersicht manage=off

# signals

echo "yabai configuration loaded.."
